<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add Program</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <link rel="stylesheet" type="text/css" href="/overall.css">
  <style>
    .content-container {
      display: flex;
      justify-content: center;
      padding: 50px 20px;
    }

    .register {
      background-color: #eaeae7;
      color: #565F63;
      border-radius: 20px;
      padding: 40px;
      max-width: 700px;
      width: 100%;
      box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

    .register h1 {
      text-align: center;
      margin-bottom: 30px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      font-size: 18px;
      display: block;
      margin-bottom: 5px;
    }

    .form-control {
      width: 100%;
      height: 40px;
      padding: 8px 12px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 16px;
      background-color: white;
    }

    .form-control[type="file"] {
      padding: 6px;
    }

    .form-control:focus {
      border-color: #007bff;
      outline: none;
      box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
    }

    textarea.form-control {
      height: 100px;
      resize: vertical;
    }

    .timeslot-group {
      background: rgba(255,255,255,0.8);
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      position: relative;
    }

    .remove-timeslot {
      position: absolute;
      top: 10px;
      right: 10px;
      background: #E91E63;
      color: white;
      border: none;
      border-radius: 50%;
      width: 25px;
      height: 25px;
      font-size: 1rem;
      line-height: 25px;
      cursor: pointer;
    }

    #add-timeslot-btn {
      display: inline-block;
      background: none;
      border: 2px dashed #565F63;
      color: #565F63;
      padding: 10px 20px;
      border-radius: 20px;
      cursor: pointer;
      margin-bottom: 20px;
    }

    .button-container {
      display: flex;
      justify-content: center;
      margin-top: 30px;
    }

    .register button {
      width: 300px;
      height: 50px;
      border: none;
      border-radius: 10px;
      background-color: #565F63;
      color: white;
      font-size: 20px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .register button:hover {
      background-color: #A3AEB1;
      color: #565F63;
    }

    .back-button {
      display: block;
      margin: 20px auto 0;
      text-align: center;
      color: #007bff;
      text-decoration: none;
      font-size: 16px;
    }

    .back-button:hover {
      text-decoration: underline;
    }

    .debug-info {
      background: #f8f9fa;
      border: 1px solid #dee2e6;
      border-radius: 5px;
      padding: 10px;
      margin: 10px 0;
      font-family: monospace;
      font-size: 12px;
      display: none;
    }
  </style>
</head>
<body>

<%- include('../partials/navbar.ejs') %>

<div class="content-container" id="content">
  <div class="register">
    <h1>Add New Program</h1>
    
    <!-- Debug toggle button -->
    <button type="button" onclick="toggleDebugMode()" style="font-size: 12px; padding: 5px 10px; margin-bottom: 20px;">
      Toggle Debug Mode
    </button>
    
    <form action="/programs/add" method="POST" id="programForm">
      
      <div class="form-group">
        <label for="programID">Program ID</label>
        <input type="text" id="programID" class="form-control" value="<%= nextId %>" disabled />
      </div>

      <div class="form-group">
        <label for="title">Program Title</label>
        <input type="text" class="form-control" id="title" name="title" required />
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="description" required></textarea>
      </div>

      <div class="form-group">
        <label for="type">Type</label>
        <select class="form-control" id="type" name="typeID" required onchange="toggleOtherType(this)">
          <option value="" disabled selected>Select program type</option>
          <% types.forEach(function(type) { %>
            <option value="<%= type.typeID %>"><%= type.name %></option>
          <% }) %>
          <option value="other">Other</option>
        </select>
        <input
          type="text"
          class="form-control mt-2"
          name="other_type"
          id="otherTypeInput"
          placeholder="Enter new program type"
          style="display:none; margin-top:10px;"
        />
      </div>
      
      <div class="form-group">
        <label for="points_reward">Points Reward</label>
        <input type="number" class="form-control" id="points_reward" name="points_reward" required min="1" />
      </div>

      <div class="form-group">
        <label for="duration">Duration (mins) — applies to all timeslots</label>
        <input type="number" class="form-control" id="duration" name="duration" required min="1" value="60" />
      </div>

      <label><b>Timeslots</b></label>
      <div id="timeslots-section">
        <div class="timeslot-group">
          <div class="form-group">
            <label>Date</label>
            <input type="date" class="form-control timeslot-date" name="timeslot_date[]" required />
          </div>
          <div class="form-group">
            <label>Start Time</label>
            <input type="time" class="form-control timeslot-start" name="timeslot_start[]" required />
          </div>
          <div class="form-group">
            <label>Available Slots</label>
            <input type="number" class="form-control timeslot-slots" name="timeslot_slots[]" min="1" required />
          </div>
          <button type="button" class="remove-timeslot" onclick="removeTimeslot(this)" style="display:none;">×</button>
        </div>
      </div>

      <button type="button" id="add-timeslot-btn">+ Add Timeslot</button>

      <input type="hidden" name="staffID" value="<%= staff.staffID %>">

      <!-- Debug information display -->
      <div id="debug-info" class="debug-info">
        <strong>Form Data Preview:</strong>
        <div id="debug-content"></div>
      </div>

      <div class="button-container">
        <button type="submit">Create Program</button>
      </div>
    </form>

    <a href="/admin/programs" class="back-button">← Back to Programs</a>
  </div>
</div>

<script>
  let debugMode = false;
  
  function toggleDebugMode() {
    debugMode = !debugMode;
    const debugInfo = document.getElementById('debug-info');
    debugInfo.style.display = debugMode ? 'block' : 'none';
    
    if (debugMode) {
      updateDebugInfo();
      // Auto-update debug info when form changes
      document.getElementById('programForm').addEventListener('input', updateDebugInfo);
      document.getElementById('programForm').addEventListener('change', updateDebugInfo);
    }
  }
  
  function updateDebugInfo() {
    if (!debugMode) return;
    
    const formData = new FormData(document.getElementById('programForm'));
    const debugContent = document.getElementById('debug-content');
    
    let debugHtml = '<pre>';
    
    // Show all form data
    for (let [key, value] of formData.entries()) {
      debugHtml += `${key}: ${value}\n`;
    }
    
    // Show array data specifically
    debugHtml += '\n--- TIMESLOT ARRAYS ---\n';
    const dates = document.querySelectorAll('.timeslot-date');
    const starts = document.querySelectorAll('.timeslot-start');
    const slots = document.querySelectorAll('.timeslot-slots');
    
    debugHtml += `timeslot_date[]: [${Array.from(dates).map(d => d.value).join(', ')}]\n`;
    debugHtml += `timeslot_start[]: [${Array.from(starts).map(s => s.value).join(', ')}]\n`;
    debugHtml += `timeslot_slots[]: [${Array.from(slots).map(s => s.value).join(', ')}]\n`;
    
    debugHtml += `\nTimeslot count: ${dates.length}\n`;
    
    debugHtml += '</pre>';
    debugContent.innerHTML = debugHtml;
  }

  const addBtn = document.getElementById('add-timeslot-btn');
  const timeslotSection = document.getElementById('timeslots-section');

  addBtn.addEventListener('click', () => {
    const first = timeslotSection.querySelector('.timeslot-group');
    const clone = first.cloneNode(true);
    
    // Clear values in cloned inputs
    clone.querySelectorAll('input').forEach(input => {
      input.value = '';
    });
    
    // Show remove button for new timeslots
    clone.querySelector('.remove-timeslot').style.display = 'inline-block';
    
    timeslotSection.appendChild(clone);
    
    // Update debug info if in debug mode
    if (debugMode) {
      setTimeout(updateDebugInfo, 100);
    }
  });

  function removeTimeslot(btn) {
    btn.closest('.timeslot-group').remove();
    
    // Update debug info if in debug mode
    if (debugMode) {
      setTimeout(updateDebugInfo, 100);
    }
  }

  // Enhanced form validation
  document.getElementById('programForm').addEventListener('submit', (e) => {
    console.log('Form submission started');
    
    const now = new Date();
    const formData = new FormData(e.target);
    
    // Log all form data for debugging
    console.log('=== FORM SUBMISSION DEBUG ===');
    for (let [key, value] of formData.entries()) {
      console.log(`${key}: ${value}`);
    }
    
    // Validate timeslots
    const dates = document.querySelectorAll('.timeslot-date');
    const starts = document.querySelectorAll('.timeslot-start');
    const slots = document.querySelectorAll('.timeslot-slots');
    
    console.log('Timeslot validation:', {
      dateCount: dates.length,
      startCount: starts.length,
      slotCount: slots.length
    });
    
    // Check if we have at least one timeslot
    if (dates.length === 0) {
      e.preventDefault();
      alert('Please add at least one timeslot.');
      return false;
    }
    
    // Validate each timeslot
    for (let i = 0; i < dates.length; i++) {
      const dateInput = dates[i];
      const timeInput = starts[i];
      const slotInput = slots[i];
      
      if (!dateInput || !timeInput || !slotInput) {
        console.error(`Missing timeslot input at index ${i}`);
        continue;
      }

      if (!dateInput.value || !timeInput.value || !slotInput.value) {
        e.preventDefault();
        alert(`Please fill in all fields for timeslot ${i + 1}.`);
        return false;
      }

      const slotDateTime = new Date(`${dateInput.value}T${timeInput.value}`);
      if (slotDateTime <= now) {
        e.preventDefault();
        alert(`Timeslot ${i + 1} must be in the future.`);
        return false;
      }
      
      const slotCount = parseInt(slotInput.value);
      if (isNaN(slotCount) || slotCount < 1) {
        e.preventDefault();
        alert(`Timeslot ${i + 1} must have at least 1 available slot.`);
        return false;
      }
    }
    
    console.log('✅ Form validation passed');
  });

  function toggleOtherType(select) {
    const otherInput = document.getElementById('otherTypeInput');
    if (select.value === 'other') {
      otherInput.style.display = 'block';
      otherInput.required = true;
    } else {
      otherInput.style.display = 'none';
      otherInput.required = false;
      otherInput.value = '';
    }
    
    if (debugMode) {
      setTimeout(updateDebugInfo, 100);
    }
  }
</script>

</body>
</html>