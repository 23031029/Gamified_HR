<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" type="text/css" href="/overall.css">
    <style>
        .profile-image {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 12px;
        }
        .stat-box1 { background-color: #17a2b8; color: white; padding: 30px; margin: 10px; border-radius: 10px; }
        .stat-box2 { background-color: #20b2aa; color: white; padding: 30px; margin: 10px; border-radius: 10px; }
        .stat-box3 { background-color: #5be5dd; color: white; padding: 30px; margin: 10px; border-radius: 10px; }
        .addStaff {
            border: 1px solid #17a2b8;
            border-radius: 20px;
            width: 300px;
            height: 50px;
            background-color: #ffffffb9;
            color: #17a2b8;
            font-weight: bold;
        }
        .addStaff:hover {
            background-color: #17a2b8;
            color: #fff;
        }
        .table td:last-child,
        .table th:last-child {
            text-align: center;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar.ejs') %>

    <div class="content-container" id="content">
        <div class="container text-center">
            <div class="row justify-content-center">
                <div class="col-md-3 stat-box1"><b>No. of Employees</b><h2><%= staffCount %></h2></div>
                <div class="col-md-3 stat-box2"><b>No. of Rewards</b><h2><%= rewardCount %></h2></div>
                <div class="col-md-3 stat-box3"><b>No. of Active Programs</b><h2><%= programCount %></h2></div>
            </div>
        </div>

        <!-- CHARTS -->
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Most Popular Programs</h5>
                            <canvas id="popular_program"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Most Redeemed Rewards</h5>
                            <canvas id="popular_reward"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Most Active Departments (This Month)</h5>
                            <canvas id="active_department"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-4">
            <div class="row">
                <div class="col-12">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Participant Trends by Month</h5>
                            <canvas id="participant_trends"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- STAFF TABLE -->
        <div class="container mt-5">
            <div class="row">
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="card-title mb-0">Staff Details</h5>
                                <div>
                                    <a href="/admin/export-dashboard" class="btn btn-success">
                                        <i class="fa fa-file-excel"></i> Export Staff CSV
                                    </a>
                                    <a class="btn btn-info" href="/admin/export-dashboard-excel?staffCount=<%= staffCount %>&rewardCount=<%= rewardCount %>&programCount=<%= programCount %>
                                        &programs=<%= encodeURIComponent(JSON.stringify(programLabels.map((label, i) => ({ label, value: programData[i] })))) %>
                                        &rewards=<%= encodeURIComponent(JSON.stringify(rewardLabels.map((label, i) => ({ label, value: rewardData[i] })))) %>
                                        &departments=<%= encodeURIComponent(JSON.stringify(activeLabel.map((label, i) => ({ label, value: activeData[i] })))) %>
                                        &trends=<%= encodeURIComponent(JSON.stringify(monthLabels.map((label, i) => ({ label, value: monthData[i] })))) %>">
                                        <i class="fas fa-file-excel"></i> Export Graphs Excel
                                    </a>
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Staff ID</th>
                                            <th>Profile Pic</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Gender</th>
                                            <th>Role</th>
                                            <th>Department</th>
                                            <th>Date Joined</th>
                                            <th>Status</th>
                                            <th>Total Points</th>
                                            <th>Edit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% person.forEach(staff => { %>
                                            <tr>
                                                <td><%= staff.staffID %></td>
                                                <td><img class="profile-image" src="/images/<%= staff.profile_image %>"></td>
                                                <td><b><%= staff.first_name %></b> <%= staff.last_name %></td>
                                                <td><%= staff.email %></td>
                                                <td><%= staff.gender %></td>
                                                <td><%= staff.role %></td>
                                                <td><%= staff.department_name %></td>
                                                <td><%= staff.date_join ? staff.date_join.toISOString().slice(0,10) : '' %></td>
                                                <td>
                                                    <form action="/status/<%= staff.staffID %>" method="POST" class="d-inline">
                                                        <select name="status" class="form-select form-select-sm" onchange="this.form.submit()">
                                                            <option value="Active" <%= staff.status === 'Active' ? 'selected' : '' %>>Active</option>
                                                            <option value="Deactive" <%= staff.status === 'Deactive' ? 'selected' : '' %>>Deactive</option>
                                                        </select>
                                                    </form>
                                                </td>
                                                <td><%= staff.total_point %></td>
                                                <td>
                                                    <% if (staff.status === 'Active') { %>
                                                        <a href="/editStaff/<%= staff.staffID %>" class="btn btn-sm btn-primary">Edit</a>
                                                    <% } else { %>
                                                        <button class="btn btn-sm btn-secondary" disabled>Edit</button>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                                <div class="d-flex justify-content-center mt-3">
                                    <a href="/admin/register">
                                        <button class="addStaff">+ Add Staff</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script>
        // CHART DATA VARIABLES
        const programLabels = <%- JSON.stringify(programLabels) %>;
        const programData = <%- JSON.stringify(programData) %>;
        const rewardLabels = <%- JSON.stringify(rewardLabels) %>;
        const rewardData = <%- JSON.stringify(rewardData) %>;
        const activeLabel = <%- JSON.stringify(activeLabel) %>;
        const activeData = <%- JSON.stringify(activeData) %>;
        const monthLabels = <%- JSON.stringify(monthLabels) %>;
        const monthData = <%- JSON.stringify(monthData) %>;

        // Program Chart
        new Chart(document.getElementById("popular_program"), {
            type: 'bar',
            data: {
                labels: programLabels,
                datasets: [{
                    label: 'Average Rating',
                    data: programData,
                    backgroundColor: programData.map((val, i) => val === Math.max(...programData) ? '#ffc107d9' : '#36a2ebb3')
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, max: 5, ticks: { stepSize: 0.5 } }
                }
            }
        });

        // Reward Chart
        new Chart(document.getElementById("popular_reward"), {
            type: 'bar',
            data: {
                labels: rewardLabels,
                datasets: [{
                    label: 'Redeemed Count',
                    data: rewardData,
                    backgroundColor: rewardData.map(val => val === Math.max(...rewardData) ? '#28a745d9' : '#ff6384b3')
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });

        // Department Chart
        new Chart(document.getElementById("active_department"), {
            type: 'bar',
            data: {
                labels: activeLabel,
                datasets: [{
                    label: 'Participations',
                    data: activeData,
                    backgroundColor: activeData.map(val => val === Math.max(...activeData) ? '#ff5722d9' : '#9966ffb3')
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });

        // Monthly Trends Line
        new Chart(document.getElementById("participant_trends"), {
            type: 'line',
            data: {
                labels: monthLabels,
                datasets: [{
                    label: 'Participants',
                    data: monthData,
                    fill: true,
                    borderColor: '#36a2eb',
                    backgroundColor: 'rgba(54,162,235,0.15)',
                    tension: 0.3,
                    pointBackgroundColor: '#36a2eb',
                    pointRadius: 4
                }]
            },
            options: {
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 1 } }
                }
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
