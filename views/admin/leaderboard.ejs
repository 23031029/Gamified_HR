<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Leaderboard</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f6f6f6;
      margin: 0;
      padding-top: 100px;
    }

    .container {
      max-width: 1000px;
      margin: auto;
      padding: 20px;
    }

    .title {
      font-size: 2rem;
      margin-bottom: 20px;
      text-align: center;
      color: #333;
    }

    .filter {
      text-align: center;
      margin-bottom: 30px;
    }

    .filter a {
      display: inline-block;
      margin: 0 10px;
      padding: 10px 20px;
      border-radius: 8px;
      text-decoration: none;
      background-color: #e0e0e0;
      color: #333;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }

    .filter a.active {
      background-color: #A3AEB1;
      color: white;
    }

    .leaderboard-table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
      overflow: hidden;
      margin-bottom: 40px;
    }

    .leaderboard-table thead {
      background-color: #565F63;
      color: #fff;
    }

    .leaderboard-table th, .leaderboard-table td {
      padding: 16px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    .leaderboard-table tr:hover {
      background-color: #f0f0f0;
    }

    .profile-img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid #ccc;
    }

    .name {
      font-weight: 600;
    }

    .points {
      font-size: 1.2rem;
      font-weight: bold;
      color: #60A5FA;
    }

    .gold-row {
      background-color: #ffd70022;
      font-weight: bold;
    }

    .silver-row {
      background-color: #c0c0c022;
      font-weight: bold;
    }

    .bronze-row {
      background-color: #cd7f3222;
      font-weight: bold;
    }

    .gold-row td {
      font-size: 1.3rem;
      padding-top: 20px;
      padding-bottom: 20px;
    }

    .animate {
      animation: popIn 0.6s ease-in-out;
    }

    @keyframes popIn {
      0% {
        transform: scale(0.95);
        opacity: 0;
      }
      100% {
        transform: scale(1);
        opacity: 1;
      }
    }

    .action-buttons form {
      display: inline;
    }

    .action-buttons button, .action-buttons a {
      background: none;
      border: none;
      cursor: pointer;
      color: #007BFF;
      font-size: 1rem;
      margin-right: 5px;
    }

    .add-entry-btn {
      display: inline-block;
      padding: 10px 20px;
      background-color: #565F63;
      color: #fff;
      font-weight: bold;
      border-radius: 8px;
      text-decoration: none;
      margin: 20px 0;
      transition: background-color 0.3s ease;
    }

    .add-entry-btn:hover {
      background-color: #3e4549;
    }

    .history-row {
      display: none;
      background-color: #fafafa;
    }

    .history-container {
      padding: 15px 30px;
      border-top: 1px solid #ddd;
      background: #fefefe;
      border-radius: 8px;
    }

    .timeline {
      list-style: none;
      padding-left: 0;
      margin: 0;
    }

    .timeline li {
      margin-bottom: 10px;
      padding-left: 10px;
      position: relative;
      border-left: 3px solid #ccc;
    }

    .timeline li::before {
      content: '';
      position: absolute;
      left: -6px;
      top: 5px;
      width: 10px;
      height: 10px;
      background: #60A5FA;
      border-radius: 50%;
    }

    .timeline .date {
      font-weight: bold;
      color: #333;
      margin-right: 10px;
      display: inline-block;
      width: 100px;
    }

    .timeline .points-change {
      font-weight: bold;
      color: #4CAF50;
      margin-right: 10px;
    }

    .timeline .desc {
      color: #555;
    }

    .timeline .type {
      font-size: 0.85em;
      color: #999;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar.ejs') %>
  <div class="container">
    <div class="title">üèÜ Leaderboard</div>

    <div class="filter">
      <a href="/admin/leaderboard?filter=all" class="<%= filter === 'all' ? 'active' : '' %>">All</a>
      <a href="/admin/leaderboard?filter=department" class="<%= filter === 'department' ? 'active' : '' %>">My Department</a>
    </div>

    <table class="leaderboard-table">
      <thead>
        <tr>
          <th>Rank</th>
          <th>Profile</th>
          <th>Name</th>
          <th>Department</th>
          <th>Total Points</th>
        </tr>
      </thead>
      <tbody>
        <% leaderboard.forEach((user, index) => {
            const isCurrentUser = user.staffID === staffID;
        %>
          <tr class="<%= index === 0 ? 'gold-row animate' : index === 1 ? 'silver-row animate' : index === 2 ? 'bronze-row animate' : '' %>">
            <td class="rank">
              <%= index === 0 ? 'ü•á' : index === 1 ? 'ü•à' : index === 2 ? 'ü•â' : index + 1 %>
            </td>
            <td><img src="/images/<%= user.profile_image %>" class="profile-img"></td>
            <td class="name" style="<%= isCurrentUser ? 'font-weight: bold; color: #007BFF;' : '' %>">
              <%= user.name %> <%= isCurrentUser ? '(You)' : '' %>
            </td>
            <td><%= user.department_name %></td>
            <td class="points"><%= user.total_point %></td>
            <td>
              <button onclick="toggleHistory('<%= user.staffID %>')">üìÇ</button>
            </td>
          </tr>

          <tr id="history-<%= user.staffID %>" class="history-row">
            <td colspan="6">
              <div class="history-container">
                <% if (user.history && user.history.length > 0) { %>
                  <ul class="timeline">
                    <% user.history.forEach(entry => { %>
                      <li>
                        <span class="date"><%= new Date(entry.date).toLocaleDateString() %></span>
                        <span class="points-change"><%= entry.points > 0 ? 'üèÖ +' + entry.points : 'üéÅ ' + entry.points %> pts</span>
                        <span class="desc"><%= entry.source %> <small class="type">(<%= entry.type %>)</small></span>
                      </li>
                    <% }) %>
                  </ul>
                <% } else { %>
                  <p style="color: #888;">No point history available.</p>
                <% } %>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <script>
      function toggleHistory(id) {
        const row = document.getElementById(`history-${id}`);
        if (row.style.display === "none") {
          row.style.display = "table-row";
        } else {
          row.style.display = "none";
        }
      }

      function toggleHistory(id) {
        const row = document.getElementById(`history-${id}`);
        row.style.display = row.style.display === "table-row" ? "none" : "table-row";
      }
    </script>
</body>
</html>
