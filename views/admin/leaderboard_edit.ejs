<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Leaderboard Entry</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f9f9f9;
      padding: 50px;
    }

    .form-container {
      max-width: 500px;
      margin: auto;
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    h2 {
      text-align: center;
      margin-bottom: 30px;
    }

    label {
      display: block;
      margin-top: 15px;
      font-weight: bold;
    }

    input, select {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border: 1px solid #ccc;
      border-radius: 6px;
    }

    button {
      margin-top: 25px;
      padding: 10px;
      background-color: #28A745;
      color: white;
      border: none;
      width: 100%;
      cursor: pointer;
      border-radius: 6px;
      font-weight: bold;
    }

    button:hover {
      background-color: #218838;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2>Edit Leaderboard Entry</h2>
    <form action="/admin/leaderboard/edit/<%= entry.Leaderboard_ID %>" method="POST">
      <label for="year">Year:</label>
      <input type="number" name="year" value="<%= entry.year %>" min="<%= new Date().getFullYear() %>" required>

      <label for="half">Half:</label>
      <select name="half" required>
        <option value="H1" <%= entry.half === 'H1' ? 'selected' : '' %>>H1</option>
        <option value="H2" <%= entry.half === 'H2' ? 'selected' : '' %>>H2</option>
      </select>

      <label for="rank_position">Rank Position:</label>
      <select name="rank_position" required>
        <option value="1" <%= entry.rank_position === 1 ? 'selected' : '' %>>ðŸ¥‡ 1st</option>
        <option value="2" <%= entry.rank_position === 2 ? 'selected' : '' %>>ðŸ¥ˆ 2nd</option>
        <option value="3" <%= entry.rank_position === 3 ? 'selected' : '' %>>ðŸ¥‰ 3rd</option>
      </select>

      <label for="staffID">Staff:</label>
      <select name="staffID" required>
        <% staff.forEach(user => { %>
          <option value="<%= user.staffID %>" <%= entry.staffID === user.staffID ? 'selected' : '' %>><%= user.name %></option>
        <% }) %>
      </select>

      <label for="reward">Reward:</label>
      <input type="text" name="reward" value="<%= entry.reward %>" maxlength="255" required>

      <button type="submit">Update Entry</button>
    </form>
  </div>
</body>
</html>
