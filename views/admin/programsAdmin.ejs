<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>CASUGOL - Admin Programs</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f5f5;
      margin: 0;
    }
    .header {
      background: linear-gradient(135deg, #B8D42F, #76B900);
      color: white;
      padding: 20px 0;
      text-align: center;
    }
    .container {
      max-width: 900px;
      margin: 30px auto;
      background: #fff;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    }
    .btn {
      display: inline-block;
      padding: 8px 18px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: 600;
      font-size: 1rem;
      text-decoration: none;
      transition: background-color 0.3s ease;
      user-select: none;
    }
    .btn-edit {
      background: #76B900;
      color: white;
    }
    .btn-edit:hover {
      background: #5da300;
    }
    .btn-delete {
      background: #dc3545;
      color: white;
    }
    .btn-delete:hover {
      background: #a71d2a;
    }
    .programs-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      table-layout: fixed;
    }
    .programs-table th,
    .programs-table td {
      padding: 12px 10px;
      border-bottom: 1px solid #eee;
      text-align: left;
      vertical-align: top;
      word-wrap: break-word;
    }
    .programs-table th {
      background: #f8f9fa;
    }
    .success-message,
    .error-message {
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 20px;
      font-weight: 600;
      text-align: center;
    }
    .success-message {
      background: #d4edda;
      color: #155724;
      border: 1px solid #c3e6cb;
    }
    .error-message {
      background: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
    }
    .no-programs {
      text-align: center;
      color: #888;
      margin: 40px 0;
      font-style: italic;
    }
    .text-warning {
      color: #f7c600;
    }
    .text-muted {
      color: #ccc;
    }
    @media (max-width: 700px) {
      .container {
        padding: 15px;
      }
      .programs-table th,
      .programs-table td {
        padding: 8px 6px;
        font-size: 0.95rem;
      }
      .btn {
        font-size: 0.9rem;
        padding: 6px 12px;
      }
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar.ejs') %>

  <header class="header">
    <h1>CASUGOL - Admin Programs</h1>
  </header>

  <main class="container">
    <a href="/programs/add" class="btn btn-edit" style="margin-bottom: 20px;">+ Add New Program</a>

    <% if (messageP) { %>
      <div class="<%= messageType === 'error' ? 'error-message' : 'success-message' %>">
        <%= messageP %>
      </div>
    <% } %>

    <% if (programs && programs.length > 0) { %>
      <table class="programs-table" aria-label="Admin Programs Table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Date</th>
            <th>Start - End Time</th>
            <th>Duration (min)</th>
            <th>Points</th>
            <th>Slots</th>
            <th>Created By</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        <% programs.forEach(program => {
          const timeslots = program.timeslots && program.timeslots.length > 0
            ? program.timeslots
            : [{ date: '-', startTime: '-', endTime: '-', slots: '-' }];

          timeslots.forEach((slot, idx) => { %>
            <tr>
              <% if (idx === 0) { %>
                <td rowspan="<%= timeslots.length %>"><%= program.Title %></td>
                <td rowspan="<%= timeslots.length %>"><%= program.Type %></td>
              <% } %>

              <td><%= slot.date %></td>
              <td><%= slot.startTime %> - <%= slot.endTime %></td>

              <% if (idx === 0) { %>
                <td rowspan="<%= timeslots.length %>"><%= program.Duration %></td>
                <td rowspan="<%= timeslots.length %>"><%= program.points_reward %></td>
              <% } %>

              <td><%= slot.slots || '-' %></td>

              <% if (idx === 0) { %>
                <td rowspan="<%= timeslots.length %>"><%= program.name %> (<%= program.Created_By %>)</td>
                <td rowspan="<%= timeslots.length %>">
                  <a href="/programs/edit/<%= program.ProgramID %>" class="btn btn-edit" aria-label="Edit <%= program.Title %>">Edit</a>
                  <form action="/programs/delete/<%= program.ProgramID %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this program?');" aria-label="Delete <%= program.Title %>">Delete</button>
                  </form>
                </td>
              <% } %>
            </tr>
        <% }) }) %>
        </tbody>
      </table>
    <% } else { %>
      <p class="no-programs">No programs found.</p>
    <% } %>
  </main>

  <h2 style="text-align: center; margin-top: 50px;">Feedback Dashboard</h2>
  <div style="
    max-width: 1000px;
    margin: 30px auto;
    background: #fff;
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
  ">
    <% if (feedbackStats.length === 0) { %>
      <p style="text-align: center; color: #777;">No feedback available yet.</p>
    <% } else { %>
      <% feedbackStats.forEach(item => { %>
        <div style="display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #eee; padding: 15px 0;">
          <div>
            <div style="font-size: 1.1rem; font-weight: bold; color: #333;"><%= item.Title %></div>
            <div style="margin-top: 6px; color: #555;">
              <strong>Average Rating:</strong>
              <% for (let i = 1; i <= 5; i++) { %>
                <i class="fa fa-star <%= i <= Math.round(item.avg_rating) ? 'text-warning' : 'text-muted' %>"></i>
              <% } %>
              <span style="font-size: 0.9rem;">(<%= item.avg_rating.toFixed(1) %>)</span>
            </div>
            <div style="color: #666;">
              <strong>Comments:</strong> <%= item.comment_count %>
            </div>
          </div>
          <div>
            <a href="/admin/program/<%= item.ProgramID %>/feedback" class="btn btn-edit" style="font-size: 0.85rem; padding: 6px 12px;">
              View Comments
            </a>
          </div>
        </div>
      <% }); %>
      <div style="text-align: center; margin: 30px 0;">
        <a href="/admin/export-feedback" class="btn btn-edit">
          <i class="fa fa-file-excel"></i> Export All Feedback Data
        </a>
      </div>
    <% } %>
  </div>
</body>
</html>
