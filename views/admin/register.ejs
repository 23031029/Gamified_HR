<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Register</title>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #f6f6f6;
    }

    .content-container {
      display: flex;
      justify-content: center;
      padding: 50px 20px;
    }

    .register {
      background-color: #eaeae7;
      color: #565F63;
      border-radius: 20px;
      padding: 40px;
      max-width: 600px;
      width: 100%;
      box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }

    .register h1 {
      text-align: center;
      margin-bottom: 30px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-group label {
      font-size: 18px;
      display: block;
      margin-bottom: 5px;
    }

    .form-control {
      width: 100%;
      height: 40px;
      padding: 8px 12px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 16px;
      background-color: white;
    }

    .form-control[type="file"] {
      padding: 6px;
    }

    .form-control:focus {
      border-color: #007bff;
      outline: none;
      box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
    }

    .button-container {
      display: flex;
      justify-content: center;
      margin-top: 30px;
    }

    .register button {
      width: 300px;
      height: 50px;
      border: none;
      border-radius: 10px;
      background-color: #565F63;
      color: white;
      font-size: 20px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .register button:hover {
      background-color: #A3AEB1;
      color: #565F63;
    }

    .alert {
      background-color: #f8d7da;
      color: #721c24;
      border: 1px solid #f5c6cb;
      border-radius: 5px;
      padding: 10px 15px;
      margin-bottom: 20px;
    }

    .alert ul {
      margin: 0;
      padding-left: 20px;
    }
  </style>
</head>
<body>
  <%- include('../partials/navbar.ejs') %>

  <div class="content-container" id="content">
    <div class="register">
      <h1>Register Staff</h1>

       <% if (regErrors && regErrors.length > 0) { %>
        <div class="alert" style="color: red;">
          <ul>
            <% regErrors.forEach(function(err) { %>
              <li><%= err %></li>
            <% }); %>
          </ul>
        </div>
      <% } %>

      <form action="/register" method="POST" enctype="multipart/form-data" id="registrationForm">
        <div class="form-group">
          <label for="profile">Staff Profile</label>
          <input type="file" class="form-control" name="profile" id="profile" accept="image/*" required>
        </div>

        <div class="form-group">
        <label for="staffID">Staff ID</label>
        <input type="text" class="form-control" name="staffID" id="staffID"
              value="<%= regData.staffID || nextStaffID %>" readonly />
      </div>


        <div class="form-group">
          <label for="first">First Name</label>
          <input type="text" class="form-control" name="first" value="<%= regData.first || '' %>"/>
        </div>

        <div class="form-group">
          <label for="last">Last Name</label>
          <input type="text" class="form-control" name="last" value="<%= regData.last || '' %>"/>
        </div>

        <div class="form-group">
          <label for="gender">Gender</label>
          <select class="form-control" name="gender" id="gender" required>
            <option hidden value="">Select gender</option>
            <option value="M" <%= regData.gender === 'M' ? 'selected' : '' %>>Male</option>
            <option value="F" <%= regData.gender === 'F' ? 'selected' : '' %>>Female</option>
          </select>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="email" value="<%= regData.email || '' %>"/>
        </div>

        <div class="form-group">
          <label for="address">Home Address</label>
          <textarea class="form-control" name="address" id="address" rows="2"><%= regData.address || '' %></textarea>
        </div>

        <div class="form-group">
          <label for="phone">Phone</label>
          <input type="tel" class="form-control" name="phone" id="phone" value="<%= regData.phone || '' %>"/>
        </div>

        <div class="form-group">
          <label for="dob">Date of Birth</label>
          <input type="date" class="form-control" name="dob" id="dob" value="<%= regData.dob || '' %>"/>
        </div>

        <div class="form-group">
          <label for="department">Department</label>
          <select class="form-control" name="department" id="department" required>
            <option hidden value="">Select a department</option>
            <% department.forEach(function(dep) { %>
              <option value="<%= dep.departmentID %>" <%= regData.department == dep.departmentID ? 'selected' : '' %>>
                <%= dep.name %>
              </option>
            <% }) %>
          </select>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" id="password" required>
        </div>

        <div class="form-group">
          <label for="role">Role</label>
          <select class="form-control" name="role" id="role" required>
            <option hidden value="">Select a role</option>
            <option value="admin" <%= regData.role === 'admin' ? 'selected' : '' %>>Admin</option>
            <option value="user" <%= regData.role === 'user' ? 'selected' : '' %>>User</option>
          </select>
        </div>

        <div class="button-container">
          <button type="submit">Register</button>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
