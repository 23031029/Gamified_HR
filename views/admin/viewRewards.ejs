<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>View Rewards - Admin</title>
  <link rel="stylesheet" type="text/css" href="/overall.css">
  <style>

    .rewards-table img {
      max-width: 80px;
      border-radius: 8px;
      border: 1px solid #ccc;
    }

        .addreward {
    border: 1px solid #17a2b8;
    border-radius: 20px;
    width: 300px;
    height: 50px;
    background-color: #ffffffb9;
    color: #17a2b8;
    font-weight: bold;
    transition: background 0.2s, color 0.2s;
}

.addreward:hover {
    background-color: #17a2b8;
    color: #fff;
}

.reward-table td:last-child, 
.reward-table th:last-child {
  text-align: center;
  vertical-align: middle;
}

  </style>
</head>
<body>
  <%- include('../partials/navbar.ejs') %>

  <div class="content-container" id="content">

    <div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="card-title mb-0">Reward Details</h5>
          </div>

          <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle reward-table">
              <thead class="table-light">
                <tr>
                  <th>Image</th>
                  <th>Name</th>
                  <th>Points</th>
                  <th>Stock</th>
                  <th>Description</th>
                  <th>Edit</th>
                </tr>
              </thead>
              <tbody>
                <% rewards.forEach(reward => { %>
                  <tr>
                    <td>
                      <img src="/images/<%= reward.image %>" alt="<%= reward.name %>" style="max-width: 80px; border-radius: 8px; border: 1px solid #ccc;">
                    </td>
                    <td><%= reward.name %></td>
                    <td><%= reward.points %></td>
                    <td><%= reward.stock %></td>
                    <td><%= reward.description %></td>
                    <td>
                      <a href="/rewards/edit/<%= reward.RewardID %>" class="btn btn-sm btn-primary">Edit</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
            <div class="d-flex justify-content-center mt-3">
                <a href="/admin/rewards/add">
                  <button class="addreward">+ Add Reward</button>
                </a>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

  </div>
</body>
</html>
