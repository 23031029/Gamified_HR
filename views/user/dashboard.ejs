<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>User Dashboard</title>
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding-top: 100px;
    }

    .container {
      max-width: 1200px;
      margin: auto;
      padding: 20px;
    }

    .card {
      background-color: #fff;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      padding: 25px;
      margin-bottom: 30px;
    }

    .points-row, .leaderboard-preview, .upcoming-programs, .reward-suggestions {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }

    .upcoming-green {
    background: #c8d83da3 !important; 
    color: #222;
    border: 1px solid #b8d42f;
  }

    .points-box {
      flex: 1;
      min-width: 200px;
      padding: 20px;
      border-radius: 12px;
      color: #fff;
      text-align: center;
    }

    .points-box h2 {
      margin: 0;
      font-size: 28px;
    }

    .points-box p {
      margin: 5px 0 0;
      font-size: 16px;
    }

    .earned { background: #C6D537; }
    .spent { background: #F87171; }
    .balance { background: #60A5FA; }

    .streak-box {
      background-color: #bfbfbf;
      padding: 20px;
      border-radius: 15px;
      margin-top: 30px;
      color: #000;
    }

    .streak-track {
      display: flex;
      justify-content: space-between;
      align-items: center;
      position: relative;
      margin-top: 10px;
    }

    .streak-track::before {
      content: '';
      position: absolute;
      top: 18px;
      left: 0;
      right: 0;
      height: 4px;
      background-color: #000;
      z-index: 0;
    }

    .streak-item {
      display: flex;
      flex-direction: column;
      align-items: center;
      z-index: 1;
    }

    .circle {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background-color: white;
      border: 3px solid #000;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
    }

    .circle.checked {
      background-color: #000;
      color: white;
    }

    .streak-text {
      margin-top: 5px;
      font-size: 12px;
      text-align: center;
    }

    .section-header {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .list-item {
      flex: 1;
      min-width: 200px;
      background: #f9f9f9;
      border: 1px solid #ddd;
      padding: 15px;
      border-radius: 10px;
    }

    .list-item h4 {
      margin: 0 0 5px;
    }

    .list-item small {
      color: #666;
    }

    @keyframes growBar {
      to {
        width: var(--target);
      }
    }

    .progress-container {
      margin: 20px 0;
    }

    .progress-bar {
      height: 25px;
      background-color: #e0e0e0;
      border-radius: 20px;
      overflow: hidden;
    }

    .progress-fill {
      height: 100%;
      background: linear-gradient(90deg, #C6D537, #A3AEB1);
      width: 0%;
      transition: width 1s ease-in-out;
    }

    .milestone-dot {
      position: absolute;
      top: -40px;
      transform: translateX(-50%);
      text-align: center;
      font-size: 11px;
      color: #333;
      display: flex;
      flex-direction: column;
      align-items: center;
      width: max-content;
      min-width: 30px;
      pointer-events: none;
    }

    .milestone-dot::before {
      content: '';
      display: block;
      width: 12px;
      height: 12px;
      margin-bottom: 4px;
      border-radius: 50%;
      background-color: #bbb;
      border: 2px solid #fff;
      box-shadow: 0 0 2px rgba(0, 0, 0, 0.3);
      transition: background-color 0.3s ease;
    }

    .milestone-dot.reached::before {
      background-color: #4CAF50;
    }

    .milestone-labels {
      display: flex;
      justify-content: space-between;
      margin-top: 8px;
      font-size: 12px;
      color: #666;
      padding: 0 5px;
    }

    .progress-fill {
      height: 100%;
      background: linear-gradient(90deg, #C6D537, #A3AEB1);
      width: 0%;
      transition: width 1s ease-in-out;
    }

    .points-box.balance {
      background: #c8d83d;
      color: #222;
      cursor: pointer;
      transition: background-color 0.3s ease, opacity 0.3s ease;
    }

    .points-box.balance:hover {
      opacity: 0.85;
    }

    .collapsible {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.5s ease, opacity 0.4s ease;
      opacity: 0;
    }

    .collapsible.open {
      max-height: 800px; /* large enough to show full content */
      opacity: 1;
    }

    @keyframes glow-shine {
      0% {
        box-shadow: 0 0 0px rgba(198, 213, 55, 0.0);
        background-color: #c8d83d;
      }
      30% {
        box-shadow: 0 0 20px rgba(198, 213, 55, 0.6);
        background-color: #d9e863;
      }
      70% {
        box-shadow: 0 0 20px rgba(198, 213, 55, 0.8);
        background-color: #e9f48c;
      }
      100% {
        box-shadow: 0 0 0px rgba(198, 213, 55, 0.0);
        background-color: #c8d83d;
      }
    }

    .glow-animate {
      animation: glow-shine 3s ease-in-out;
    }
    
  </style>
</head>
<body>
  <%- include('../partials/navbar.ejs') %>

  <div class="container">

    <!-- Current Points -->
    <div class="points-box balance toggle-history-box" style="width: 100%; max-width: 400px; margin: 0 auto 20px;">
      <h2 style="font-size: 32px;"> <%= points.balance %> pts</h2>
      <p>Current Points</p>
      <small style="font-size: 12px; opacity: 0.5;">Click to view history</small>
    </div>

    <!-- Point History Table -->
    <div class="card collapsible" id="points-history-card">
      <div class="section-header">Points History</div>
      <% if (pointHistory && pointHistory.length > 0) { %>
        <table style="width: 100%; border-collapse: collapse;">
          <thead>
            <tr>
              <th style="text-align: left;">Date</th>
              <th style="text-align: left;">Type</th>
              <th style="text-align: left;">Source</th>
              <th style="text-align: right;">Points</th>
            </tr>
          </thead>
          <tbody>
            <% pointHistory.forEach(entry => { %>
              <tr>
                <td><%= new Date(entry.date).toLocaleDateString() %></td>
                <td><%= entry.type %></td>
                <td><%= entry.source %></td>
                <td style="text-align: right; color: <%= entry.points > 0 ? 'green' : 'red' %>;">
                  <%= entry.points > 0 ? '+' : '' %><%= entry.points %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <p>No history available.</p>
      <% } %>
    </div>


    <!-- Milestone Tracker (Simplified) -->
     <%
      const milestones = [
        { value: 500, bonus: 10 },
        { value: 1000, bonus: 20 },
        { value: 1500, bonus: 30 },
        { value: 2000, bonus: 40 },
        { value: 2500, bonus: 50 },
        { value: 3000, bonus: 60 }
      ];
    %>
    <% 
      const currentPoints = points.balance;
      const progressPercentage = Math.min(currentPoints / 3000 * 100, 100).toFixed(1);
    %>
    <div class="card">
      <div class="section-header">Milestone Progress</div>
      <div class="progress-container">
        <div class="progress-bar">
          <div class="progress-fill" style="width: <%= progressPercentage %>%;"></div>
        </div>
        <div class="milestone-labels">
          <span>0</span>
          <span>500</span>
          <span>1000</span>
          <span>1500</span>
          <span>2000</span>
          <span>2500</span>
          <span>3000</span>
        </div>
        <p style="text-align:center; margin-top: 10px;">
          Progress: <%= currentPoints %> / 3000 pts (<%= progressPercentage %>%)
        </p>
      </div>
    </div>



    <!-- Your Programs -->
    <div class="card">
      <div class="section-header">Your Programs</div>
      <div style="display: flex; gap: 30px; flex-wrap: wrap;">
        <!-- Upcoming Programs -->
        <div style="flex:1; min-width: 250px;">
          <h3>Upcoming</h3>
          <div class="upcoming-programs">
            <% if (upcomingPrograms.length) { %>
              <% upcomingPrograms.forEach(program => { %>
                <div class="list-item upcoming-green">
                  <h4><%= program.Title %></h4>
                  <small>
                    <%= program.Type %> | 
                   <span style="color: red; font-weight: bolder;"> <%= program.Date ? (program.Date.toLocaleDateString ? program.Date.toLocaleDateString() : program.Date) : '' %>
                    &nbsp;
                    <%= program.Start_Time ? program.Start_Time.substring(0,5) : '' %>
                    (<%= program.Duration %> mins)
                   </span>
                  </small><br/>
                  <small>Status: <strong><%= program.Status %></strong></small>
                </div>
              <% }); %>
            <% } else { %>
              <div class="list-item">No upcoming programs.</div>
            <% } %>
          </div>
        </div>
        <!-- Ongoing Programs -->
        <div style="flex:1; min-width: 250px;">
          <h3>Registered</h3>
          <div class="ongoing-programs">
            <% if (ongoingPrograms.length) { %>
              <% ongoingPrograms.forEach(program => { %>
                <div class="list-item">
                  <h4><%= program.Title %></h4>
                  <small>
                    <%= program.Type %> | 
                    <%= program.Date ? (program.Date.toLocaleDateString ? program.Date.toLocaleDateString() : program.Date) : '' %>
                    &nbsp;
                    <%= program.Start_Time ? program.Start_Time.substring(0,5) : '' %>
                    (<%= program.Duration %> mins)
                  </small><br/>
                  <small>Status: <strong><%= program.Status %></strong></small>
                </div>
              <% }); %>
            <% } else { %>
              <div class="list-item">No registered programs.</div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const progressFill = document.querySelector('.progress-fill');
      const rawPercentage = <%= progressPercentage %>;
      const rawBalance = <%= points.balance %>;
      const toggleBox = document.querySelector('.toggle-history-box');
      const historyCard = document.getElementById('points-history-card');
      const pointsBox = document.querySelector('.points-box.balance');
      pointsBox.classList.add('glow-animate');

      setTimeout(() => pointsBox.classList.remove('glow-animate'), 3000);

      // Animate progress
      progressFill.style.width = rawPercentage + "%";

      // Toggle animation for point history
      toggleBox.addEventListener('click', () => {
        historyCard.classList.toggle('open');
      });

      // Milestone alert logic
      const milestones = [
        { threshold: 500, bonus: 10 },
        { threshold: 1000, bonus: 20 },
        { threshold: 1500, bonus: 30 },
        { threshold: 2000, bonus: 40 },
        { threshold: 2500, bonus: 50 },
        { threshold: 3000, bonus: 60 }
      ];

      milestones.forEach(m => {
        const key = `milestone-${m.threshold}-notified`;
        if (rawBalance >= m.threshold && !localStorage.getItem(key)) {
          alert(`ðŸŽ‰ Milestone reached!\nYou received ${m.bonus} bonus points.`);
          localStorage.setItem(key, "true");
        }
      });
    });
  </script>
</body>
</html>
