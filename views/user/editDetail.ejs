                                <div class="input-group">
                                    <input type="email" class="form-control" name="value" value="<%= staff.email %>" required>
                                    <button class="btn btn-success" type="submit"><i class="fas fa-check" onclick="return confirm('Confirm edit?')"></i></button>
                                    <button class="btn btn-secondary" type="button" onclick="cancelEdit('email')"><i class="fas fa-times"></i></button>
                                </div>
                            </form>
                        </td>
                    </tr>

                    <tr>
                        <th><i class="fas fa-phone"></i> Phone</th>
                        <td>
                            <div id="phoneView" class="d-flex align-items-center justify-content-between">
                                <span><%= staff.phone_number || staff.phone %></span>
                                <button class="btn btn-sm btn-outline-primary" onclick="startEdit('phone')"><i class="fas fa-pencil-alt"></i></button>
                            </div>
                            <form id="phoneEdit" class="d-none" action="/user/edit-particulars" method="POST">
                                <input type="hidden" name="field" value="phone_number">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="value" value="<%= staff.phone_number || staff.phone %>" required>
                                    <button class="btn btn-success" type="submit" onclick="return confirm('Confirm edit?')"><i class="fas fa-check"></i></button>
                                    <button class="btn btn-secondary" type="button" onclick="cancelEdit('phone')"><i class="fas fa-times"></i></button>
                                </div>
                            </form>
                        </td>
                    </tr>

                    <tr>
                        <th><i class="fas fa-home"></i> Address</th>
                        <td>
                            <div id="addressView" class="d-flex align-items-center justify-content-between">
                                <span><%= staff.home_address || staff.address %></span>
                                <button class="btn btn-sm btn-outline-primary" onclick="startEdit('address')"><i class="fas fa-pencil-alt"></i></button>
                            </div>
                            <form id="addressEdit" class="d-none" action="/user/edit-particulars" method="POST">
                                <input type="hidden" name="field" value="home_address">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="value" value="<%= staff.home_address || staff.address %>" required>
                                    <button class="btn btn-success" type="submit" onclick="return confirm('Confirm edit?')"><i class="fas fa-check"></i></button>
                                    <button class="btn btn-secondary" type="button" onclick="cancelEdit('address')"><i class="fas fa-times"></i></button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-lock"></i> Password</th>
                        <td>
                        <button class="btn btn-warning" onclick="window.location.href='/user/change-password'">
                            Change Password
                        </button>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

     <!-- Company Details and Ongoing Programs -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="profile-section">
                <h5 class="section-title">
                    <i class="fas fa-building"></i>
                    Company Details
                </h5>
                <table class="table info-table">
                    <tr>
                        <th><i class="fas fa-id-badge"></i> Staff ID</th>
                        <td><%= staff.staffID %></td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-sitemap"></i> Department</th>
                        <td><%= staff.department_name %></td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-check-circle"></i> Status</th>
                        <td><span class="status-badge"><%= staff.status %></span></td>
                    </tr>
                    <tr>
                        <th><i class="fas fa-calendar-alt"></i> Date Joined</th>
                        <td><%= staff.date_join ? staff.date_join.toISOString ? staff.date_join.toISOString().slice(0,10) : staff.date_join : '' %></td>
                    </tr>
                </table>
            </div>
        </div>
<div class="col-md-6 mb-4">
  <div class="profile-section">
    <h5 class="section-title">
      <i class="fas fa-check-double"></i>
      Completed & Cancelled Programs
    </h5>

<div class="row">
  <!-- Completed Programs (Left Column) -->
  <div class="col-12 col-md-6 mb-4">
    <h6><i class="fas fa-check text-success"></i> Completed</h6>
    <% if (completedPrograms && completedPrograms.length > 0) { %>
      <div id="completed-programs-container">
        <% completedPrograms.forEach(function(prog, index) { %>
          <div class="program-item mb-3 p-3 border rounded <%= index >= 4 ? 'extra-program d-none' : '' %>" data-type="completed">
            <div class="mb-2">
              <span class="program-title d-block mb-1"><%= prog.title %></span>
              <span><small><%= formatDate(prog.Date) %> (<%= formatTime(prog.Start_Time) %>)</small></span>
              <span class="program-badge badge bg-success"><%= prog.status %></span>
            </div>
            <div class="mt-2">
              <% if (!prog.hasFeedback) { %>
                <button class="btn btn-sm btn-warning" onclick="openFeedback('<%= prog.programID %>', '<%= prog.title %>')">Give Feedback</button>
              <% } else { %>
                <span class="badge bg-success">Feedback submitted</span>
              <% } %>
            </div>
          </div>
        <% }); %>
        
        <% if (completedPrograms.length > 4) { %>
          <div class="text-center">
            <button class="btn btn-outline-primary btn-sm show-more-btn" onclick="togglePrograms('completed')">
              <i class="fas fa-chevron-down me-1"></i>
              Show More (<%= completedPrograms.length - 4 %> more)
            </button>
            <button class="btn btn-outline-primary btn-sm show-less-btn d-none" onclick="togglePrograms('completed')">
              <i class="fas fa-chevron-up me-1"></i>
              Show Less
            </button>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <div class="no-programs text-center p-4">
        <i class="fas fa-inbox fa-2x text-muted"></i>
        <p class="mb-0 mt-2 text-muted">No completed programs.</p>
      </div>
    <% } %>
  </div>

  <!-- Cancelled Programs (Right Column) -->
  <div class="col-12 col-md-6 mb-4">
    <h6><i class="fas fa-times-circle text-danger"></i> Cancelled</h6>
    <% if (cancelledPrograms && cancelledPrograms.length > 0) { %>
      <div id="cancelled-programs-container">
        <% cancelledPrograms.forEach(function(prog, index) { %>
          <div class="program-item mb-3 p-3 border rounded <%= index >= 4 ? 'extra-program d-none' : '' %>" data-type="cancelled">
            <div class="mb-2">
              <span class="program-title d-block mb-1"><%= prog.title %></span>
              <span><small><%= formatDate(prog.Date) %> (<%= formatTime(prog.Start_Time) %>)</small></span>
              <span class="program-badge badge bg-danger"><%= prog.status %></span>
            </div>
          </div>
        <% }); %>

        <% if (cancelledPrograms.length > 4) { %>
          <div class="text-center">
            <button class="btn btn-outline-primary btn-sm show-more-btn" onclick="togglePrograms('cancelled')">
              <i class="fas fa-chevron-down me-1"></i>
              Show More (<%= cancelledPrograms.length - 4 %> more)
            </button>
            <button class="btn btn-outline-primary btn-sm show-less-btn d-none" onclick="togglePrograms('cancelled')">
              <i class="fas fa-chevron-up me-1"></i>
              Show Less
            </button>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <div class="no-programs text-center p-4">
        <i class="fas fa-inbox fa-2x text-muted"></i>
        <p class="mb-0 mt-2 text-muted">No cancelled programs.</p>
      </div>
    <% } %>
  </div>
</div>
</div>
</div>

<script>
  function startEdit(field) {
    document.getElementById(field + 'View').classList.add('d-none');
    document.getElementById(field + 'Edit').classList.remove('d-none');
  }

  function cancelEdit(field) {
    document.getElementById(field + 'View').classList.remove('d-none');
    document.getElementById(field + 'Edit').classList.add('d-none');
  }

  // Show More / Show Less toggles for programs
  function togglePrograms(type) {
    const container = document.getElementById(type + '-programs-container');
    const extraPrograms = container.querySelectorAll('.extra-program');
    const showMoreBtn = container.querySelector('.show-more-btn');
    const showLessBtn = container.querySelector('.show-less-btn');

    if (showMoreBtn.classList.contains('d-none')) {
      // Currently showing less, so hide extras
      extraPrograms.forEach(el => el.classList.add('d-none'));
      showMoreBtn.classList.remove('d-none');
      showLessBtn.classList.add('d-none');
    } else {
      // Show extras
      extraPrograms.forEach(el => el.classList.remove('d-none'));
      showMoreBtn.classList.add('d-none');
      showLessBtn.classList.remove('d-none');
    }
  }

  // Feedback modal logic
  let currentStep = 1;
  let selectedRating = 0;
  let selectedTags = [];
  let currentProgramID = '';
  let currentProgramTitle = '';

  function openFeedback(programID, programTitle) {
    currentProgramID = programID;
    currentProgramTitle = programTitle;
    currentStep = 1;
    selectedRating = 0;
    selectedTags = [];

    // Reset modal steps
    document.querySelectorAll('.feedback-step').forEach(step => step.classList.add('d-none'));
    document.getElementById('step1').classList.remove('d-none');
    document.getElementById('nextBtn1').disabled = true;
    document.getElementById('commentBox').value = '';
    document.getElementById('earnedPoints').textContent = '0';

    // Reset stars
    document.querySelectorAll('#starContainer .star').forEach(star => {
      star.style.color = '#ccc';
    });

    document.getElementById('feedbackModal').style.display = 'block';
  }

  function closeFeedback() {
    document.getElementById('feedbackModal').style.display = 'none';
  }

  // Star rating click
  document.querySelectorAll('#starContainer .star').forEach(star => {
    star.addEventListener('click', () => {
      selectedRating = parseInt(star.getAttribute('data-value'));
      highlightStars(selectedRating);
      document.getElementById('nextBtn1').disabled = false;
    });
  });

  function highlightStars(count) {
    document.querySelectorAll('#starContainer .star').forEach(star => {
      let val = parseInt(star.getAttribute('data-value'));
      star.style.color = val <= count ? '#ffc107' : '#ccc';
    });
  }

  function nextStep() {
    if (currentStep === 1) {
      // Move to step 2
      document.getElementById('step1').classList.add('d-none');
      document.getElementById('step2').classList.remove('d-none');
      currentStep = 2;
    } else if (currentStep === 2) {
      // Collect selected tags
      selectedTags = Array.from(document.querySelectorAll('.tag-checkbox:checked')).map(cb => cb.value);

      // Move to step 3
      document.getElementById('step2').classList.add('d-none');
      document.getElementById('step3').classList.remove('d-none');
      currentStep = 3;
    }
  }

  async function submitFeedback() {
    const comment = document.getElementById('commentBox').value;

    // Calculate points earned
    let points = 5; // rating mandatory
    if (selectedTags.length > 0) points += 5;
    if (comment.trim() !== '') points += 10;

    // Show thank you message and points earned
    document.getElementById('step3').classList.add('d-none');
    const step4 = document.getElementById('step4');
    step4.classList.remove('d-none');
    document.getElementById('earnedPoints').textContent = points;

    // Send data to server (using fetch)
    try {
      const response = await fetch('/user/submit-feedback', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          programID: currentProgramID,
          rating: selectedRating,
          tags: selectedTags,
          comment: comment
        })
      });
      if (!response.ok) throw new Error('Network error');
    } catch (err) {
      alert('Failed to submit feedback. Please try again.');
    }
  }
</script>

</body>
</html>
